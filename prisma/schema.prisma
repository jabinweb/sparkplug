// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Form Responses Table - Unified for all forms
model FormResponse {
  id        String   @id @default(cuid())
  formType  String   // 'contact', 'newsletter', 'volunteer', 'booking', etc.
  data      Json     // Flexible JSON field to store all form data
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([formType])
  @@index([createdAt])
}

// Site Content Management
model SiteContent {
  id        String   @id @default(cuid())
  section   String   @unique // 'homepage', 'about', 'programs', etc.
  content   Json     // JSON content for the section
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  updatedBy String?  // Email of admin who updated

  @@index([section])
}

// Admin Users
model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String?
  role          String   @default("admin") // 'admin', 'editor', etc.
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([email])
}

// Blog Posts (if you want to manage them via backend)
model BlogPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String
  content     String   @db.Text
  category    String
  author      String
  publishDate DateTime
  featured    Boolean  @default(false)
  tags        String[] // Array of tags
  thumbnail   String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([publishDate])
}

// File Management
model File {
  id           String   @id @default(cuid())
  filename     String   // Sanitized filename
  originalName String   // Original filename uploaded by user
  mimeType     String
  size         Int
  url          String   // Full URL to access the file
  path         String   // Relative path on server
  folder       String   @default("default")
  uploadedBy   String   // User ID who uploaded the file
  isPublic     Boolean  @default(false)
  description  String?  @db.Text
  metadata     Json?    // Additional metadata (e.g., dimensions for images, duration for videos)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([folder])
  @@index([uploadedBy])
  @@index([createdAt])
  @@index([filename])
}
